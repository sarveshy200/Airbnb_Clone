<% layout("/layouts/boilerplate") %>
<style>
  body {
    background-color: #f8f9fa;
  }

  .card {
    background-color: #ffffff;
    border-radius: 1.25rem;
  }

  .form-control {
    padding: 0.75rem 1rem;
    font-size: 1rem;
  }

  .form-label {
    font-weight: 600;
    color: #333;
  }

  .btn-primary {
    font-size: 1.1rem;
    background-color: #0d6efd;
    border-color: #0d6efd;
  }

  .btn-primary:hover {
    background-color: #0b5ed7;
    border-color: #0a58ca;
  }

  @media (max-width: 768px) {
    .card-body {
      padding: 2rem 1.5rem;
    }
  }

  #categorySelect {
    min-height: 45px;
  }
</style>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
          <h2 class="text-center mb-4 fw-bold">Create a Listing</h2>

          <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-4">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input
                type="text"
                name="listing[title]"
                id="title"
                class="form-control rounded-3"
                placeholder="e.g. Cozy Mountain Cabin"
                required
              />
            </div>

            <div class="mb-4">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea
                name="listing[description]"
                id="description"
                class="form-control rounded-3"
                placeholder="Describe the space, amenities, and vibe"
                rows="4"
                required
              ></textarea>
            </div>

            <div class="mb-4">
              <label for="image" class="form-label fw-semibold">Upload Image</label>
              <input
                type="file"
                name="listing[image]"
                id="image"
                class="form-control rounded-3"
                required
              />
            </div>

            <div class="mb-4">
              <label for="price" class="form-label fw-semibold">Price (â‚¹)</label>
              <input
                type="number"
                name="listing[price]"
                id="price"
                class="form-control rounded-3"
                placeholder="e.g. 2500"
                required
              />
            </div>

            <div class="mb-4">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input
                type="text"
                name="listing[location]"
                id="location"
                class="form-control rounded-3"
                placeholder="e.g. Manali, Shimla, Goa"
                required
              />
            </div>

            <div class="mb-4">
              <label for="country" class="form-label fw-semibold">Country</label>
              <input
                type="text"
                name="listing[country]"
                id="country"
                class="form-control rounded-3"
                placeholder="e.g. India"
                required
              />
            </div>
            <div class="mb-3">
              <label for="categorySelect" class="form-label">Select Categories</label>
              <select name="listing[categories][]" id="categorySelect" multiple>
                <% categories.forEach(category => { %>
                  <option value="<%= category._id %>"><%= category.name %></option>
                <% }) %>
              </select>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-3 py-2 fw-semibold">
              Create Listing
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const categorySelect = document.getElementById("categorySelect");
    const choices = new Choices(categorySelect, {
      removeItemButton: true,
      placeholderValue: 'Choose categories'
    });
  });
</script>


