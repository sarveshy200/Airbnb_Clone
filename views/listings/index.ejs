<% layout("/layouts/boilerplate") %>
  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      padding: 1.2rem 0;
      border-bottom: 2px solid #e0e0e0;
      background-color: #f9fafc;
      border-radius: 12px;
      margin-bottom: 1rem;
    }

    .filter {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 0.6rem 1.2rem;
      border-radius: 25px;
      border: 1px solid #ccc;
      background-color: white;
      cursor: pointer;
      transition: all 0.3s ease;
      min-width: 90px;
    }

    .filter:hover {
      background-color: #e3f2fd;
      border-color: #1976d2;
      color: #1976d2;
    }

    .filter i {
      font-size: 1.3rem;
      margin-bottom: 0.3rem;
      color: #1976d2;
    }

    .filter p {
      margin: 0;
      font-size: 0.85rem;
      font-weight: 500;
      color: #333;
    }

    .tax-free-toggle {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-weight: 500;
      font-size: 1rem;
      padding: 0.4rem 0.8rem;
      border: 1px solid #ccc;
      border-radius: 25px;
      background-color: #ffffff;
      transition: all 0.3s ease;
    }

    .tax-free-toggle:hover {
      background-color: #e8f5e9;
      border-color: #2e7d32;
      color: #2e7d32;
    }

    .switch {
      position: relative;
      display: inline-block;
      width: 50px;
      height: 28px;
    }

    .switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      transition: 0.4s;
      border-radius: 34px;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 22px;
      width: 22px;
      left: 3px;
      bottom: 3px;
      background-color: white;
      transition: 0.4s;
      border-radius: 50%;
    }

    input:checked+.slider {
      background-color: #2e7d32;
    }

    input:checked+.slider:before {
      transform: translateX(22px);
    }

    .switch-label {
      margin-bottom: 0;
      font-weight: 600;
    }

    /* Airbnb card styles */
    .airbnb-card {
      border-radius: 18px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      background-color: #fff;
    }

    .airbnb-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .airbnb-img-wrapper {
      height: 220px;
      overflow: hidden;
      border-top-left-radius: 18px;
      border-top-right-radius: 18px;
    }

    .airbnb-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .airbnb-card:hover .airbnb-img {
      transform: scale(1.05);
    }

    .card-title {
      font-size: 1rem;
      color: #222;
    }

    .text-muted {
      font-size: 0.85rem;
    }

    @media (max-width: 768px) {
      .filter {
        min-width: 75px;
        padding: 0.4rem 0.8rem;
      }

      .tax-free-toggle {
        margin-top: 0.8rem;
      }
    }
  </style>
  <div class="container mt-4 mb-4">
    <div id="filters">
      <!-- Example Airbnb-style filters -->
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-house"></i></div>
        <p>Entire Place</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Private Room</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Lakefront</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountain View</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Cabin</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-swimmer"></i></div>
        <p>Pool</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-wifi"></i></div>
        <p>Wi-Fi</p>
      </div>
      <div class="tax-free-toggle ms-4 mt-2">
        <label class="switch-label" for="taxFreeSwitch">Tax Free</label>
        <label class="switch">
          <input type="checkbox" id="taxFreeSwitch">
          <span class="slider round"></span>
        </label>
      </div>
    </div>

    <% if (allListing && allListing.length> 0) { %>
      <div class="row gy-4">
        <% allListing.forEach(listing=> { %>
          <div class="col-lg-4 col-md-6">
            <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
              <div class="card airbnb-card border-0 shadow-sm">
                <div class="airbnb-img-wrapper">
                  <img src="<%= listing.image.url %>" class="card-img-top airbnb-img" alt="listing image" />
                </div>
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center mb-1">
                    <h5 class="card-title mb-0 text-truncate">
                      <%= listing.title %>
                    </h5>
                    <span class="text-success fw-bold">â‚¹<%= listing.price.toLocaleString("en-IN") %></span>
                  </div>
                  <p class="text-muted mb-0">
                    <%= listing.location || 'India' %>
                  </p>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
      </div>
      <% } else { %>
        <div class="text-center mt-5">
          <h3 class="text-muted">No Listings Available</h3>
        </div>
        <% } %>

  </div>