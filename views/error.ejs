<% layout("/layouts/boilerplate") %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger shadow-lg rounded-4 border-0">
                <h3 class="alert-heading text-danger fw-bold">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <%= err.message %>
                </h3>
                <hr>
                <p class="mb-1 text-muted small">
                    <strong>Details:</strong>
                </p>
                <pre class="small text-secondary"><%= err.stack %></pre>
                <div class="text-end mt-3">
                    <a href="/listings" class="btn btn-outline-danger rounded-pill">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
